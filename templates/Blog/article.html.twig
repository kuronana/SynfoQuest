{% extends 'base.html.twig' %}


{% block body %}
<ul>
    {% for tag in article.tags %}
        <h1>Tags : <a href="/tag/{{ tag.name }}">{{ tag.name }}</a></h1>
    {% else %}
        <li>No tags for this article</li>
    {% endfor %}
    <p>- <strong>Title</strong> : {{ article.title }}</p>
    <p>- <strong>Content</strong> : {{ article.content }}</p>
</ul>
{% endblock %}